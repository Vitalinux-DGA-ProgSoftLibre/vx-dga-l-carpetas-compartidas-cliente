#!/bin/bash
USER=$(whoami)
  if test $USER = "root"
	then

## Comenzamos importando y definiendo las variables que usaremos posteriormente:
. /etc/default/vx-dga-variables/vx-dga-variables-general.conf

echo "$IPCACHE:/nfs/privado /media/privado nfs \
actimeo=1800,noatime,nolock,bg,nfsvers=3,tcp,rw,noauto,user,hard,intr,defaults,exec 0 0" >> /etc/fstab
		if test $? -eq 0 ; then
			yad --title "NFS PRIVADO" --info \
			--text " Todo va bien ... Ahora se va a tratar de crear el acceso directo a la Unidad de Red Privada " --center \
			--window-icon=/usr/share/lxpanel/images/vitalinux.svg \
			--width="350" --height="100" --text-align="center" --button="gtk-ok:0"
		else
			yad --title "NFS PRIVADO" --info \
			--text " Problemas!!! No se ha podido configurar la Unidad de Red Privada para Profesores " --center \
			--window-icon=/usr/share/lxpanel/images/vitalinux.svg \
			--width="350" --height="100" --text-align="center" --button="gtk-ok:0"
		fi
	
	else
		yad --title "NFS PRIVADO" --info \
			--text " Solo el usuario ROOT puede configurar la Unidad de Red Privada para Profesores " --center \
			--window-icon=/usr/share/lxpanel/images/vitalinux.svg \
			--width="350" --height="100" --text-align="center" --button="gtk-ok:0"
  fi
